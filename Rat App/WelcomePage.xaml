<Page
    x:Class="Rat_App.WelcomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Rat_App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignHorizontalCenterWithPanel="True" x:Name="buttonLogin" Content="GET STARTED!" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,24" Click="buttonLogin_Click" FontFamily="Roboto"/>
        <TextBlock x:Name="textWelcome" RelativePanel.Above="buttonLogin" HorizontalAlignment="Center" Margin="0,0,0,87" TextWrapping="Wrap" Text="Report and browse rat sightings posted in your area!" FontSize="14" Height="19" VerticalAlignment="Bottom" Padding="0" RelativePanel.AlignHorizontalCenterWithPanel="True"/>
        <Image RelativePanel.Above="textWelcome" HorizontalAlignment="Center" VerticalAlignment="Center" Source="logo.png" Width="358" Margin="0" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignTopWithPanel="True"/>
    </RelativePanel>
</Page>
